{
	"compilerOptions": {
		"target": "es5",
		"jsx": "react",
		"types": [
            // add node as an option
            "node"
         ],
         // typeRoots option has been previously configured
         "typeRoots": [
            // add path to @types
            "node_modules/@types"
         ],
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"strictNullChecks": true,
		"declaration": true,
		"moduleResolution": "node",
		"outDir": "./lib",
		"lib": [
		    "dom",
		    "es6"
		    ]
	},
	"include": [
	    "src/**/*"
	    ]
}
